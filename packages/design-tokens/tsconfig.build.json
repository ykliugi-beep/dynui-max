{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "composite": false,
    "incremental": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
