{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "noEmit": false,
    "composite": false,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "files": [
    "src/index.ts",
    "src/tokens/base.ts",
    "src/tokens/semantic.ts",
    "src/themes/index.ts"
  ],
  "include": [],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stories.ts"
  ]
}