{
  "name": "@dynui-max/design-tokens",
  "version": "0.2.1",
  "description": "Design token primitives for the DynUI-Max design system with Style Dictionary build system",
  "type": "module",
  "private": true,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./css": "./dist/tokens.css",
    "./themes/*": "./dist/themes/*"
  },
  "files": [
    "dist",
    "build",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "clean": "del-cli dist build/tokens.json tsconfig.tsbuildinfo",
    "build": "pnpm clean && pnpm build:tokens && pnpm build:js && pnpm build:types",
    "build:tokens": "style-dictionary build --config build/config.js",
    "build:js": "tsup --config tsup.config.ts",
    "build:types": "tsc -p tsconfig.build.json",
    "dev": "pnpm build && pnpm build:js --watch",
    "test": "vitest run"
  },
  "dependencies": {
    "style-dictionary": "catalog:design"
  },
  "devDependencies": {
    "@dynui-max/build-config": "workspace:*",
    "@dynui-max/eslint-config": "workspace:*",
    "eslint": "catalog:quality",
    "del-cli": "catalog:tooling",
    "tsup": "catalog:build",
    "typescript": "catalog:typescript",
    "vitest": "catalog:testing"
  }
}
