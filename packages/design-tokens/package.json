{
  "name": "@dynui-max/design-tokens",
  "version": "0.1.1",
  "description": "Design token primitives for the DynUI-Max design system with Style Dictionary build system",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./css": "./dist/tokens.css",
    "./themes/*": "./dist/themes/*"
  },
  "files": [
    "dist",
    "build",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {

    "build:types": "tsc --emitDeclarationOnly",
    "build": "pnpm clean && pnpm build:tokens && pnpm build:js",
    "build:tokens": "style-dictionary build --config build/config.js",
    "build:js": "tsup --config tsup.config.ts",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "pnpm build:tokens && tsup --config tsup.config.ts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rimraf dist build/tokens.json tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "style-dictionary": "catalog:design"
  },
  "devDependencies": {
    "@dynui-max/build-config": "workspace:*",
    "@dynui-max/eslint-config": "workspace:*",
    "typescript": "catalog:typescript",
    "tsup": "catalog:build",
    "rimraf": "catalog:tooling",
    "vitest": "catalog:testing",
    "eslint": "catalog:quality"
  },
  "keywords": [
    "design-tokens",
    "design-system",
    "css-variables",
    "style-dictionary",
    "typescript",
    "theming"
  ]
}