{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declarationDir": "./dist",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@dynui-max/design-tokens": ["../design-tokens/src"],
      "@dynui-max/design-tokens/*": ["../design-tokens/src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ],
  "references": [
    { "path": "../design-tokens" }
  ]
}