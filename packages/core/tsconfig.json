    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@dynui-max/design-tokens": ["../design-tokens/src"]
    },
    "types": ["vitest/globals"]
  },
  "include": [
    "src/**/*",
    "src/test/**/*",
