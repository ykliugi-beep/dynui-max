{
  "name": "@dynui-max/monorepo",
  "version": "0.2.1",
  "type": "module",
  "private": true,
  "description": "Production-ready React + TypeScript component library with design tokens and comprehensive testing",
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "components",
    "design-tokens",
    "accessibility"
  ],
  "repository": { "type": "git", "url": "https://github.com/ykliugi-beep/dynui-max.git" },
  "license": "MIT",
  "author": "DynUI-Max Team",
  "workspaces": ["packages/*", "apps/*", "tools/*"],
  "scripts": {
    "//=== Core Development (No Turbo) =====": "",
    "build": "pnpm -r --stream build",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r --parallel clean && pnpm clean:artifacts",
    "clean:artifacts": "del-cli \"packages/**/dist\" \"apps/**/dist\" \"tools/**/dist\" \"**/tsconfig.tsbuildinfo\" \"apps/**/storybook-static\"",
    "reset": "node -e \"const fs=require('fs'),cp=require('child_process');fs.rmSync('node_modules',{recursive:true,force:true});fs.rmSync('pnpm-lock.yaml',{force:true});cp.execSync('pnpm install',{stdio:'inherit'})\"",
    "reset:full": "pnpm clean && pnpm build",

    "//=== Quality Gates (PNPM Native) =====": "",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:a11y": "pnpm -r --parallel test:a11y",
    "typecheck": "pnpm -r --parallel typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality:gates": "pnpm typecheck && pnpm lint && pnpm test:coverage",

    "//=== Phase 5: Documentation & Publishing =====": "",
    "storybook": "pnpm --filter=@dynui-max/storybook storybook",
    "storybook:build": "pnpm --filter=@dynui-max/storybook storybook:build",
    "docs:api": "pnpm --filter=@dynui-max/docs docs:build",
    "docs:build": "pnpm storybook:build && pnpm docs:api",
    "playground": "pnpm --filter=@dynui-max/playground playground",
    "playground:build": "pnpm --filter=@dynui-max/playground playground:build",

    "//=== Publishing Pipeline =====": "", 
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "publish:packages": "pnpm build && pnpm quality:gates && pnpm changeset:publish",

    "//=== Maintenance =====": "",
    "deps:update": "pnpm update -r --interactive",
    "deps:audit": "pnpm audit --audit-level moderate",
    "size:analyze": "pnpm build && bundlesize",
    "size:analyze:detailed": "pnpm build && node scripts/bundle-analysis.js",
    "prepare": "husky"
  },
  "dependencies": { 
    "@dynui-max/design-tokens": "workspace:*" 
  },
  "devDependencies": {
    "@changesets/changelog-github": "catalog:tooling",
    "@changesets/cli": "catalog:tooling",
    
    "@axe-core/react": "catalog:testing",
    "@testing-library/jest-dom": "catalog:testing",
    "@testing-library/react": "catalog:testing",
    "@testing-library/user-event": "catalog:testing",
    "jsdom": "catalog:testing",
    "vitest": "catalog:testing",
    "vitest-axe": "catalog:testing",
    
    "@storybook/addon-a11y": "catalog:storybook",
    "@storybook/addon-docs": "catalog:storybook",
    "@storybook/addon-essentials": "catalog:storybook",
    "@storybook/addon-interactions": "catalog:storybook",
    "@storybook/react-vite": "catalog:storybook",
    "@storybook/test": "catalog:storybook",
    "@storybook/test-runner": "catalog:storybook",
    "chromatic": "catalog:storybook",
    "storybook": "catalog:storybook",
    
    "typescript": "catalog:typescript",
    "@types/node": "catalog:typescript",
    "@types/react": "catalog:core",
    "@types/react-dom": "catalog:core",
    
    "vite": "catalog:build",
    "tsup": "catalog:build",
    "@vitejs/plugin-react": "catalog:build",
    
    "eslint": "catalog:quality",
    "prettier": "catalog:quality",
    "@typescript-eslint/parser": "catalog:quality",
    "@typescript-eslint/eslint-plugin": "catalog:quality",
    "eslint-config-prettier": "catalog:quality",
    "eslint-plugin-react": "catalog:quality",
    "eslint-plugin-react-hooks": "catalog:quality",
    "@eslint/js": "catalog:quality",
    "eslint-plugin-react-refresh": "catalog:quality",
    "globals": "catalog:quality",
    
    "husky": "catalog:tooling",
    "bundlesize": "catalog:tooling",
    "del-cli": "catalog:tooling",
    "rimraf": "catalog:tooling"
  },
  "pnpm": {
    "allowedDeprecatedVersions": {
      "glob": "*",
      "rimraf": "*", 
      "@types/minimatch": "*",
      "abab": "*",
      "domexception": "*",
      "inflight": "*",
      "are-we-there-yet": "*",
      "gauge": "*",
      "iltorb": "*",
      "npmlog": "*",
      "expect-playwright": "*",
      "jest-playwright-preset": "*",
      "jest-process-manager": "*"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18",
        "react-dom": "18", 
        "typescript": "5.4",
        "storybook": "8"
      },
      "ignoreMissing": [
        "@types/react",
        "@types/react-dom",
        "@storybook/design-token"
      ]
    },
    "overrides": {
      "typescript": "^5.4.5",
      "source-map": "^0.7.6"
    }
  },
  "engines": { 
    "node": ">=20.0.0", 
    "pnpm": ">=9.0.0" 
  },
  "packageManager": "pnpm@9.12.3",
  "bundlesize": [
    { "path": "./packages/core/dist/**/*.js", "maxSize": "150KB", "compression": "gzip" },
    { "path": "./packages/design-tokens/dist/**/*.css", "maxSize": "50KB", "compression": "gzip" }
  ]
}